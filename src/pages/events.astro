---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---
<!DOCTYPE html>
<html lang="en">
<head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body>
    <Header title={SITE_TITLE} />
    <main class="bg-fblack p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Event 1 -->
            <div id="event1" class="bg-white rounded-lg overflow-hidden shadow-md transition-transform transform hover:scale-105 cursor-pointer">
                <img src="https://placekitten.com/400/300" alt="Event 1" class="w-full h-48 object-cover" />
                <div class="p-4">
                    <h3 class="text-xl font-semibold mb-2">Event 1</h3>
                    <p class="text-gray-600">Short description of Event 1.</p>
                </div>
            </div>

            <!-- Event 2 -->
            <div id="event2" class="bg-white rounded-lg overflow-hidden shadow-md transition-transform transform hover:scale-105 cursor-pointer">
                <img src="https://placekitten.com/401/300" alt="Event 2" class="w-full h-48 object-cover" />
                <div class="p-4">
                    <h3 class="text-xl font-semibold mb-2">Event 2</h3>
                    <p class="text-gray-600">Short description of Event 2.</p>
                </div>
            </div>
        </div>

        <!-- Dialog Box (Hidden by default) -->
        <div id="dialog" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center">
            <div class="bg-white p-8 rounded-lg">
                <h2 class="text-2xl font-semibold mb-4">Event Details</h2>
                <p>Details of the selected event go here.</p>
                <button onclick="document.getElementById('dialog').classList.add('hidden');" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded">Close</button>
            </div>
        </div>
    </main>

    <Footer />

    <script>
        // Function to show the dialog box
        function showDialog() {
            document.getElementById('dialog').classList.remove('hidden');
        }

        // Function to close the dialog box
        function closeDialog() {
            document.getElementById('dialog').classList.add('hidden');
        }

        // Event listeners for each event box
        document.getElementById('event1').addEventListener('click', showDialog);
        document.getElementById('event2').addEventListener('click', showDialog);
    </script>
</body>
</html>

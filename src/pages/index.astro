---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Carousel from "../components/Carousel.jsx";
import HeroImg from "../assets/home_bg.png";
import { Image } from "astro:assets";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main class="w-full h-screen">
      <div
        class="w-full flex flex-col lg:flex-row justify-between items-center gap-8"
      >
        <div class="w-full lg:w-1/3 mx-auto text-center">
          <h1 id="line1" class="text-green-600 text-3xl lg:text-5xl">
            The Machine Learning Club
          </h1>
          <h1 id="line2" class="text-gray-800 text-xl lg:text-3xl">
            PES University
          </h1>
        </div>
        <Image
          src={HeroImg}
          alt="Aura logo"
          class="w-56 lg:w-80 object-contain rounded-none"
        />
        <Carousel client:load />
      </div>
    </main>
    <Footer />
  </body>
</html>

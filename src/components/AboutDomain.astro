---
import { Image } from "astro:assets";
const { img, title, content } = Astro.props;
---

<div
  class="border-4 rounded-xl flex flex-col items-center h-full 2xl:h-96 w-full 2xl:flex-row"
>
  <Image class="w-64" src={img} alt="img" />
  <div class="flex flex-col gap-4 items-center justify-center">
    <h1 class="font-bold text-green-750 text-4xl text-center">{title}</h1>
    <p class=" p-2 text-xl">
      {content}
    </p>
  </div>
</div>

---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';

---

<header>
	
	<nav>
		<h2><a href="/">AURA</a></h2>
		<!-- <h2><a href="/">{SITE_TITLE}</a></h2> -->
		<div class="internal-links">
			<HeaderLink href="/" >Home</HeaderLink>
			<HeaderLink href="/blog" >Articles</HeaderLink>
			<HeaderLink href="/about" >About</HeaderLink>
			<HeaderLink href="/aitools" >AI Tools</HeaderLink>
			<HeaderLink href="/contact" >Contact Us</HeaderLink>
		</div>
		<button class="reg-btn">Register now</button>
	</nav>
</header>


<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: black;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 28px;
	}

	h2 a{
		/* align-items: ; */
	}
	.aura-img{
		width: 100px;
		height: 100px;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding-top:40px;
		padding-left:10%;
		padding-right:10%;
	}
	.internal-links{
		width: 452px;
		height: 43px;
		top: 35px;
		left: 498px;
		border-radius: 70px;
		opacity: 0.73px;

	}

	nav a {
		
		display: flex-start;
		padding-top:6px;
		padding-right:5px;
		padding-left: 12px;
		color: black
		text-decoration: none;
		font-weight: 100;

		
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	
	/* .social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	} */
	.reg-btn{
		background-color:#242424;
		color:#1DD726;
		border: solid 1px;
		border-radius: 100px ;
		border-color:#1DD726;
		padding-top:7px;
		padding-bottom:7px;
		padding-left: 14px;
		padding-right: 14px;
		align-content: center;
		font-size: 20px;
		cursor: pointer;
		transition: 0.3s;
	}
	.reg-btn:hover{
		background-color:#000000;
		box-shadow: 0 1px 16px 0 #1DD726
	}
</style>